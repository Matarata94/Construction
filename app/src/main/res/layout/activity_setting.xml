<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="ir.matarata.construction.SettingActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_dark"
        android:id="@+id/setting_toolbar"
        android:theme="@style/ThemeOverlay.MyTheme"
        android:elevation="4dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25dp"
            android:text="       تنظیمات"
            android:id="@+id/contactus_toolbartitle"/>

    </android.support.v7.widget.Toolbar>

    <com.andexert.library.RippleView
        android:id="@+id/setting_firstripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_toolbar"
        android:layout_marginTop="5dp"
        app:rv_color="#29b6f6"
        app:rv_rippleDuration="200"
        rv_centered="true">

        <TextView
            android:id="@+id/setting_tvtheme"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:textColor="#616161"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="   انتخاب تم برنامه"/>

        <com.github.pavlospt.CircleView
            android:id="@+id/setting_cv_theme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/setting_firstripple"
            android:layout_marginLeft="20dp"
            app:cv_titleText=""
            app:cv_subtitleText=""
            app:cv_titleSize="0dp"
            app:cv_subtitleSize="0dp"
            app:cv_titleColor="#ffffff"
            app:cv_subtitleColor="#ffffff"
            app:cv_strokeColorValue="#ffffff"
            app:cv_fillColor="#009688"
            app:cv_fillRadius="0.8"
            app:cv_strokeWidthSize="0"/>

    </com.andexert.library.RippleView>

    <View
        android:id="@+id/setting_firstview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/setting_firstripple">

    </View>

    <com.andexert.library.RippleView
        android:id="@+id/setting_secondripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_firstview"
        app:rv_color="#29b6f6"
        app:rv_rippleDuration="200"
        rv_centered="true">

        <TextView
            android:id="@+id/setting_tv_fontsize"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:textColor="#616161"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="   اندازه فونت"/>

        <TextView
            android:id="@+id/setting_tv_fontsize_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_firstview"
            android:layout_alignLeft="@+id/setting_tv_fontsize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="20"
            android:textColor="#bdbdbd"
            android:textSize="18dp"/>

    </com.andexert.library.RippleView>

    <View
        android:id="@+id/setting_secondview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/setting_secondripple">

    </View>

    <com.andexert.library.RippleView
        android:id="@+id/setting_thirdripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_secondview"
        app:rv_color="#29b6f6"
        app:rv_rippleDuration="200"
        rv_centered="true">

        <TextView
            android:id="@+id/setting_tv_decimal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:textColor="#616161"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="   تعیین تعداد اعشار"/>

        <TextView
            android:id="@+id/setting_tv_decimal_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_secondview"
            android:layout_alignLeft="@+id/setting_tv_decimal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="3"
            android:textColor="#bdbdbd"
            android:textSize="18dp"/>

    </com.andexert.library.RippleView>

    <View
        android:id="@+id/setting_thirdview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/setting_thirdripple">

    </View>

</RelativeLayout>
